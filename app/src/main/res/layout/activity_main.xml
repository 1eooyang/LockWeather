<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <com.billionss.weather.weather.DynamicWeatherView
        android:id="@+id/main_dynamicweatherview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.billionss.weather.helper.MxxViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


            <com.billionss.weather.helper.MxxPagerTitleStrip xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mxxPagerTitleStrip1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:textColor="@color/w_text_primary"
                android:textSize="18dp"
                app:pts_background="#55ffffff"
                app:pts_gravity="center"
                app:pts_margin="6dp"
                app:pts_radius="2dp"
                app:pts_selected_background="@color/w_text_primary"/>



    </com.billionss.weather.helper.MxxViewPager>

    <RelativeLayout
        android:layout_marginTop="55dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <ImageView
            android:id="@+id/manual_location"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/home" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_20_black"
        />
</RelativeLayout>
